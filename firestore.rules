
/**
 * @file Firestore Security Rules for Nina 1.0 (Development Mode)
 * @description This ruleset is configured for development. It allows any authenticated user
 *              to read and write data, removing permission-based restrictions to facilitate
 *              rapid prototyping and prevent "permission-denied" errors during development.
 *
 *              WARNING: These rules are not secure for a production environment.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Open access for employees and jejich subcollections for any signed-in user.
     */
    match /employees/{employeeId} {
      allow read, write: if isSignedIn();

      match /interactions/{interactionId} {
        allow read, write: if isSignedIn();
      }

      match /pdiActions/{pdiActionId} {
        allow read, write: if isSignedIn();
      }

      match /meetings/{meetingId} {
        allow read, write: if isSignedIn();
      }
    }

    /**
     * @description Public read access for roles and teams. Write access is disabled.
     */
    match /roles/{roleId} {
      allow read: if true;
      allow write: if false;
    }

    match /teams/{teamId} {
      allow read: if true;
      allow write: if false;
    }

    /**
     * @description Leader rankings can be read by anyone, but only written to by Cloud Functions (no client-side writes).
     */
    match /leaderRankings/{leaderId} {
        allow read: if true;
        allow write: if false; // Protect this collection from client-side writes
    }

    /**
     * @description Projects - accessible to authenticated users
     */
    match /projects/{projectId} {
      allow read, write: if isSignedIn();
      
      match /interactions/{interactionId} {
        allow read, write: if isSignedIn();
      }
    }

    /**
     * @description Configs - readable by all authenticated users, writable by authenticated users
     * Note: Access control is handled at the application level (only admins can access the admin panel)
     */
    match /configs/{configId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }
  }
}
